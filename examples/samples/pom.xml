<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.wcm.maven</groupId>
    <artifactId>io.wcm.maven.global-parent</artifactId>
    <version>25</version>
    <relativePath />
  </parent>

  <name>Galenium Examples Samples</name>
  <groupId>io.wcm.qa</groupId>
  <artifactId>io.wcm.qa.galenium.examples.samples</artifactId>
  <packaging>jar</packaging>
  <version>1.0.1-SNAPSHOT</version>
  <description>Test automation examples.</description>

  <properties>
    <site.url.module.prefix>galenium/examples/samples</site.url.module.prefix>
  </properties>

  <profiles>
    <profile>
      <id>update-samples</id>

      <properties>
        <io.wcm.qa.galenium.example.testsRoot>../tests</io.wcm.qa.galenium.example.testsRoot>
        <io.wcm.qa.galenium.example.sampled>${io.wcm.qa.galenium.example.testsRoot}/target/sampled</io.wcm.qa.galenium.example.sampled>
        <io.wcm.qa.galenium.example.expected>${io.wcm.qa.galenium.example.testsRoot}/target/test-classes</io.wcm.qa.galenium.example.expected>
        <io.wcm.qa.galenium.example.include>images/**/*.png</io.wcm.qa.galenium.example.include>
        <io.wcm.qa.galenium.example.sampleDescriptor>${project.build.outputDirectory}/samples-assembly.xml</io.wcm.qa.galenium.example.sampleDescriptor>
      </properties>

      <build>
        
        <resources>
          <resource>
            <directory>src/main/resources</directory>
            <includes>
              <include>**/*.md</include>
              <include>**/*.xml</include>
            </includes>
            <filtering>true</filtering>
          </resource>
        </resources>
        
        <plugins>

          <!-- Assemble samples -->
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-assembly-plugin</artifactId>
            <executions>
              <execution>
                <id>sample-packaging</id>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
                <configuration>
                  <appendAssemblyId>false</appendAssemblyId>
                  <descriptors>
                    <descriptor>${io.wcm.qa.galenium.example.sampleDescriptor}</descriptor>
                  </descriptors>
                </configuration>
              </execution>
            </executions>
          </plugin>

        </plugins>
      </build>
    </profile>

    <profile>
      <id>site-for-ci</id>
      <activation>
        <property>
          <name>continuous-integration</name>
          <value>true</value>
        </property>
      </activation>

      <distributionManagement>
        <site>
          <id>${site.deploy.id}</id>
          <url>${site.deploy.url}${site.url.module.prefix}</url>
        </site>
      </distributionManagement>
    </profile>
  </profiles>

</project>
